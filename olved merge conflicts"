[32m+[m[32mimport json[m
[32m+[m[32mimport sqlite3[m
[32m+[m[32mfrom flask import Flask, render_template, request, session, redirect, url_for, jsonify[m
[32m+[m[32mfrom flask_session import Session[m
[32m+[m
[32m+[m[32m# Initialize database[m
[32m+[m
[32m+[m
[32m+[m[32mdef init_db():[m
[32m+[m[32m    conn = sqlite3.connect('users.db')[m
[32m+[m[32m    c = conn.cursor()[m
[32m+[m[32m    c.execute('''CREATE TABLE IF NOT EXISTS users (username TEXT, password TEXT)''')[m
[32m+[m[32m    conn.commit()[m
[32m+[m[32m    conn.close()[m
[32m+[m
[32m+[m
[32m+[m[32m# Initialize Flask app[m
[32m+[m[32mapp = Flask(__name__)[m
[32m+[m[32mapp.config['SESSION_TYPE'] = 'filesystem'[m
[32m+[m[32mapp.config['SECRET_KEY'] = 'supersecretkey'[m
[32m+[m[32mSession(app)[m
[32m+[m
[32m+[m[32m# Helper functions for expenses[m
[32m+[m
[32m+[m
[32m+[m[32mdef save_expenses(user_id, expenses):[m
[32m+[m[32m    with open(f'expenses_{user_id}.json', 'w') as f:[m
[32m+[m[32m        json.dump(expenses, f)[m
[32m+[m
[32m+[m
[32m+[m[32mdef load_expenses(user_id):[m
[32m+[m[32m    try:[m
[32m+[m[32m        with open(f'expenses_{user_id}.json', 'r') as f:[m
[32m+[m[32m            return json.load(f)[m
[32m+[m[32m    except FileNotFoundError:[m
[32m+[m[32m        return [][m
[32m+[m
[32m+[m[32m# Register route[m
[32m+[m
[32m+[m
[32m+[m[32m@app.route('/register', methods=['GET', 'POST'])[m
[32m+[m[32mdef register():[m
[32m+[m[32m    if request.method == 'POST':[m
[32m+[m[32m        username = request.form.get('username')[m
[32m+[m[32m        password = request.form.get('password')[m
[32m+[m[32m        conn = sqlite3.connect('users.db')[m
[32m+[m[32m        c = conn.cursor()[m
[32m+[m[32m        c.execute("INSERT INTO users (username, password) VALUES (?, ?)",[m
[32m+[m[32m                  (username, password))[m
[32m+[m[32m        conn.commit()[m
[32m+[m[32m        conn.close()[m
[32m+[m[32m        return redirect(url_for('login'))[m
[32m+[m[32m    return render_template('register.html')[m
[32m+[m
[32m+[m[32m# Login route[m
[32m+[m
[32m+[m
[32m+[m[32m@app.route('/login', methods=['GET', 'POST'])[m
[32m+[m[32mdef login():[m
[32m+[m[32m    if request.method == 'POST':[m
[32m+[m[32m        username = request.form.get('username')[m
[32m+[m[32m        password = request.form.get('password')[m
[32m+[m[32m        conn = sqlite3.connect('users.db')[m
[32m+[m[32m        c = conn.cursor()[m
[32m+[m[32m        c.execute([m
[32m+[m[32m            "SELECT * FROM users WHERE username = ? AND password = ?", (username, password))[m
[32m+[m[32m        user = c.fetchone()[m
[32m+[m[32m        conn.close()[m
[32m+[m[32m        if user:[m
[32m+[m[32m            session['user_id'] = username[m
[32m+[m[32m            return redirect(url_for('index'))[m
[32m+[m[32m        else:[m
[32m+[m[32m            return "Invalid credentials, please try again."[m
[32m+[m[32m    return render_template('login.html')[m
[32m+[m
[32m+[m[32m# Logout route[m
[32m+[m
[32m+[m
[32m+[m[32m@app.route('/logout')[m
[32m+[m[32mdef logout():[m
[32m+[m[32m    session.pop('user_id', None)[m
[32m+[m[32m    return redirect(url_for('login'))[m
[32m+[m
[32m+[m[32m# Index route[m
[32m+[m
[32m+[m
[32m+[m[32m@app.route('/', methods=['GET', 'POST'])[m
[32m+[m[32mdef index():[m
[32m+[m[32m    if 'user_id' not in session:[m
[32m+[m[32m        return redirect(url_for('login'))[m
[32m+[m
[32m+[m[32m    user_id = session['user_id'][m
[32m+[m[32m    expenses = load_expenses(user_id)[m
[32m+[m
[32m+[m[32m    # Ensure expenses is not None[m
[32m+[m[32m    if expenses is None:[m
[32m+[m[32m        expenses = [][m
[32m+[m
[32m+[m[32m    # Calculate total expenses here so it's available for both GET and POST[m
[32m+[m[32m    total_expenses = sum(float(expense['amount']) for expense in expenses)[m
[32m+[m
[32m+[m[32m    if request.method == 'POST':[m
[32m+[m[32m        updating = request.form.get('updating')[m
[32m+[m[32m        expense_id = int(request.form.get('expense_id')[m
[32m+[m[32m                         ) if request.form.get('expense_id') else None[m
[32m+[m[32m        amount = request.form.get('amount')[m
[32m+[m[32m        # Assuming you keep it as 'expense' in HTML form[m
[32m+[m[32m        expense = request.form.get('expense')[m
[32m+[m[32m        date = request.form.get('date')[m
[32m+[m
[32m+[m[32m        new_expense = {[m
[32m+[m[32m            'amount': amount,[m
[32m+[m[32m            'category': expense,  # Note the change here[m
[32m+[m[32m            'date': date[m
[32m+[m[32m        }[m
[32m+[m
[32m+[m[32m        if updating == 'true' and expense_id is not None:[m
[32m+[m[32m            expenses[expense_id] = new_expense[m
[32m+[m[32m        else:[m
[32m+[m[32m            expenses.append(new_expense)[m
[32m+[m
[32m+[m[32m        save_expenses(user_id, expenses)[m
[32m+[m
[32m+[m[32m        # Update the total expenses after POST[m
[32m+[m[32m        total_expenses = sum(float(expense['amount']) for expense in expenses)[m
[32m+[m
[32m+[m[32m    return render_template('index.html', total_expenses=total_expenses, expenses=expenses)[m
[32m+[m
[32m+[m
[32m+[m[32m# Delete expense API route[m
[32m+[m[32m@app.route('/api/delete_expense/<int:expense_id>', methods=['DELETE'])[m
[32m+[m[32mdef delete_expense(expense_id):[m
[32m+[m[32m    print(f"Attempting to delete expense_id: {expense_id}")  # Debugging line[m
[32m+[m
[32m+[m[32m    if 'user_id' not in session:[m
[32m+[m[32m        return jsonify({'error': 'Not logged in'}), 401[m
[32m+[m
[32m+[m[32m    user_id = session['user_id'][m
[32m+[m[32m    expenses = load_expenses(user_id)[m
[32m+[m[32m    print(f"Current expenses: {expenses}")  # Debugging line[m
[32m+[m
[32m+[m[32m    if 0 <= expense_id < len(expenses):[m
[32m+[m[32m        del expenses[expense_id][m
[32m+[m[32m        print(f"Deleted expense. New expenses: {expenses}")  # Debugging line[m
[32m+[m[32m        save_expenses(user_id, expenses)[m
[32m+[m[32m        return jsonify({'message': 'Deleted successfully'}), 200[m
[32m+[m[32m    else:[m
[32m+[m[32m        # Debugging line[m
[32m+[m[32m        print(f"Failed to delete expense with id: {expense_id}")[m
[32m+[m[32m        return jsonify({'error': 'Invalid expense ID'}), 400[m
[32m+[m
[32m+[m
[32m+[m[32m# Initialize the database and run the app[m
[32m+[m[32minit_db()[m
[32m+[m
[32m+[m[32mif __name__ == '__main__':[m
[32m+[m[32m    app.run(debug=True)[m
