[32m+[m[32m<script>[m
[32m+[m[32mdocument.addEventListener("DOMContentLoaded", function() {[m
[32m+[m
[32m+[m[32m    // Validate form submission[m
[32m+[m[32m    document.querySelector("form").addEventListener("submit", function(event) {[m
[32m+[m[32m        const amount = document.querySelector("input[name='amount']").value.trim();[m
[32m+[m[32m        const date = document.querySelector("input[name='date']").value.trim();[m
[32m+[m
[32m+[m[32m        if (!amount) {[m
[32m+[m[32m            alert("Amount is required");[m
[32m+[m[32m            event.preventDefault();[m
[32m+[m[32m            return;[m
[32m+[m[32m        }[m
[32m+[m
[32m+[m[32m        if (isNaN(parseFloat(amount))) {[m
[32m+[m[32m            alert("Amount must be a number");[m
[32m+[m[32m            event.preventDefault();[m
[32m+[m[32m            return;[m
[32m+[m[32m        }[m
[32m+[m
[32m+[m[32m        if (!date) {[m
[32m+[m[32m            alert("Date is required");[m
[32m+[m[32m            event.preventDefault();[m
[32m+[m[32m            return;[m
[32m+[m[32m        }[m
[32m+[m[32m    });[m
[32m+[m
[32m+[m[32m  // Handle delete-button clicks[m
[32m+[m[32m    document.querySelectorAll(".delete-button").forEach(function(button, index) {[m
[32m+[m[32m        button.addEventListener("click", function(event) {[m
[32m+[m[32m            const expenseId = index;[m
[32m+[m[32m            const rowToDelete = event.target.parentNode.parentNode;[m
[32m+[m
[32m+[m[32m            if (confirm('Are you sure you want to delete this expense?')) {[m
[32m+[m[32m                fetch(`/api/delete_expense/${expenseId}`, {[m
[32m+[m[32m                    method: 'DELETE'[m
[32m+[m[32m                })[m
[32m+[m[32m                .then(response => {[m
[32m+[m[32m                    if (response.status === 200) {[m
[32m+[m[32m                        return response.json();[m
[32m+[m[32m                    } else {[m
[32m+[m[32m                        throw new Error('Failed to delete');[m
[32m+[m[32m                    }[m
[32m+[m[32m                })[m
[32m+[m[32m                .then(data => {[m
[32m+[m[32m                    rowToDelete.remove();[m
[32m+[m[32m                })[m
[32m+[m[32m                .then(data => {[m
[32m+[m[32m    const amount = parseFloat(rowToDelete.children[3].innerText);[m
[32m+[m[32m    let totalAmount = parseFloat(document.getElementById('total-amount').innerText);[m
[32m+[m[32m    totalAmount -= amount;[m
[32m+[m[32m    document.getElementById('total-amount').innerText = totalAmount.toFixed(2);[m
[32m+[m[32m    rowToDelete.remove();[m
[32m+[m[32m})[m
[32m+[m[32m                .catch(error => {[m
[32m+[m[32m                    console.error('There was an error deleting the expense:', error);[m
[32m+[m[32m                });[m
[32m+[m[32m            }[m
[32m+[m[32m        });[m
[32m+[m[32m    });[m
[32m+[m[32m});[m
[32m+[m[32mfunction addExpense() {[m
[32m+[m[32m  // Gather data from your form inputs[m
[32m+[m[32m  const amount = $("#amount").val();[m
[32m+[m[32m  const description = $("#description").val();[m
[32m+[m
[32m+[m[32m  // AJAX request to your Flask backend[m
[32m+[m[32m  $.ajax({[m
[32m+[m[32m    type: "POST",[m
[32m+[m[32m    url: "/add_expense",  // Your Flask route for adding expenses[m
[32m+[m[32m    data: { "amount": amount, "description": description },[m
[32m+[m[32m    success: function(response) {[m
[32m+[m[32m      // Update the table with the new expense[m
[32m+[m[32m      $("#expensesTable").append(/* New row with expense data */);[m
[32m+[m
[32m+[m[32m      // Update the total amount[m
[32m+[m[32m      const newTotal = parseFloat($("#totalAmountInTable").text()) + parseFloat(amount);[m
[32m+[m[32m      $("#totalAmountInTable").text(newTotal.toFixed(2));[m
[32m+[m[32m    }[m
[32m+[m[32m  });[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32m</script>[m
